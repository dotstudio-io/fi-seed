nav.navbar.navbar-inverse.navbar-fixed-top.navbar-fold(
  ng-class='{ "navbar-folded": folded }')

  .container
    .navbar-header
      button.navbar-toggle.collapsed(
        ng-click='toggleCollapse()',
        type='button')

        span.sr-only Toggle navigation

        span.icon-bar
        span.icon-bar
        span.icon-bar

      a.navbar-brand(ng-href='/')
        img(src='/assets/images/ic-navbar.png')
        | {{ $root.app.title }}

    #navbar.navbar-collapse.collapse
      p.navbar-text.navbar-right(ng-if='$root.session.user')
        span Signed in as&ensp;
          strong {{ $root.session.user.name }}

        | &ensp;&mdash;&ensp;

        a.navbar-link(
          ng-click='signout()',
          role='button',
          href='')

          | Sign out

      p.navbar-text.navbar-right(ng-if='!$root.session.user')
        a.navbar-link(ng-href='/users/sign-in')
          | Sign in
